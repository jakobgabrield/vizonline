//for counter in starting_num ... <ending condition>ending_num step step_number
// condition    
//    < > <= >=
// step_number defaults to 1 if there is nothing present

func main(): none {
    
    // variable decls
    @ctr: int;
    @ctr2: int;
    @ctr3: int;
    @ctr4: int;
    @ctr5: int;

    // try out our for loop with all aspects
    for @ctr in 1 ... <10 step 2{
        print("for loop with step 2");
    }
    
    // try out our for loop missing the step 
    for @ctr2 in 1 ... <= 10 {
        print("for loop default step 1");
    }

    // try out our for loop decrement by 1
    for @ctr3 in 10 ... == 5 step -1 {
        print("for loop default count down by 1");
    }

    for @ctr4 in 10 ... > 0 step -1 {
        print("testing > end condition");
    }
    
    for @ctr5 in 10 ... >= 5 step -1 {
        print("testing >= condition");
    }

}